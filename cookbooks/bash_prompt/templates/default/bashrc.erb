# /etc/skel/.bashrc
#
# This file is sourced by all *interactive* bash shells on startup,
# including some apparently interactive shells such as scp and rcp
# that can't tolerate any output.  So make sure this doesn't display
# anything or bad things will happen !


# Test for an interactive shell.  There is no need to set anything
# past this point for scp and rcp, and it's important to refrain from
# outputting anything in those cases.
if [[ $- != *i* ]] ; then
        # Shell is non-interactive.  Be done now!
        return
fi

function set_prompt {
  local        BLUE="\[\033[0;34;40m\]"
  local         RED="\[\033[0;31;40m\]"
  local   LIGHT_RED="\[\033[1;31;40m\]"
  local       GREEN="\[\033[0;32;40m\]"
  local LIGHT_GREEN="\[\033[1;32;40m\]"
  local       WHITE="\[\033[1;37;40m\]"
  local  LIGHT_GRAY="\[\033[0;37;40m\]"
  local BOLD_YELLOW="\[\033[0;01;33m\]"
  local      PURPLE="\[\033[0;35;40m\]"
  
  local ENVIRONMENT_NAME="<%=@environment_name%>"
  local    INSTANCE_ROLE="<%=@instance_role%>"
  
PS1="$BLUE[$BOLD_YELLOW$ENVIRONMENT_NAME($PURPLE$RAILS_ENV$BOLD_YELLOW)$BLUE:$PURPLE$INSTANCE_ROLE$BLUE]\
$BLUE[$RED\u@$BLUE]\
$BLUE[$RED\w$BOLD_YELLOW$BLUE]\
$GREEN\$ "
}
set_prompt
